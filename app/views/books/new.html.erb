<h1> Add new book </h1>

    <%= form_with model: @book, url: new_user_book_path do |form| %>

    <%= form.label :book_name %>
    <div class="mb-3" %>
        <%= form.text_field:name, class:"form-control", placeholder:"Book Name" %>
        <% @book.errors.full_messages_for(:book_name).each do |message| %>
        <div><%= message %></div>
    <% end %>
    </div>

    <%= form.label :author %>
    <div class="mb-3" %>
        <%= form.text_field:author, class:"form-control", placeholder:"Author Name" %>
        <% @book.errors.full_messages_for(:author).each do |message| %>
        <div><%= message %></div>
    <% end %>
    </div>

     <%= form.label :addition %>
    <div class="mb-3">
        <%= form.number_field :addition, class:"form-control", placeholder:"Additon" %>
        <% @book.errors.full_messages_for(:addition).each do |message| %>
      <div><%= message %></div>
    <% end %>
    </div>
    <%= form.submit "Create Book", class:"btn btn-primary" %>
<% end %>

 <%= link_to "Go Back", new_path, method: :destroy %> 



