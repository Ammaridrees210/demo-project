<h1> Edit Book Fields </h1>
<div class="row">
  <div class="col-md-4 col-md-offset-3">
    <%= form_with  model: @book,url:  edit_user_book_path do |form| %>
    
    <%= form.label :book_name %>
        <div class="mb-3" %>
            <%= form.text_field:name, class:"form-control", placeholder:"Book Name" %>
            <% @book.errors.full_messages_for(:book_name).each do |message| %>
            <div><%= message %></div>
            <% end %>
        </div>

    <%= form.label :author %>
        <div class="mb-3" %>
            <%= form.text_field:author, class:"form-control", placeholder:"Author Name" %>
            <% @book.errors.full_messages_for(:book_name).each do |message| %>
            <div><%= message %></div>
            <% end %>
        </div>

    <%= form.label :addition %>
        <div class="mb-3">
            <%= form.number_field :addition, class:"form-control", placeholder:"Additon" %>
            <% @book.errors.full_messages_for(:book_name).each do |message| %>
            <div><%= message %></div>
    <% end %>
        </div>

    <div class="action">
    <%= form.submit "Update", class:"btn btn-primary" %>
    </div>

<% end %>
</div>
</div>

<%= link_to "back to book list", books_path %>
